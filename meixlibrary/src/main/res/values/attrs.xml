<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleProgressBar">
        <attr name="ringWidth" format="integer" />
        <attr name="trackColor" format="reference|color" />
        <attr name="thumbColor" format="reference|color" />
        <attr name="centerColor" format="reference|color" />
        <attr name="centerTextColor" format="reference|color" />
        <attr name="centerTextSize" format="integer" />
        <attr name="progress" format="integer"></attr>
    </declare-styleable>
    <declare-styleable name="ShapeTextView">
        <attr name="corner" format="dimension" />
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_color" format="reference|color" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="reference|color" />
        <attr name="text_content" format="string" />
        <attr name="shape_color" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="StepsView">
        <attr name="current_step" format="integer"></attr>
        <attr name="step_direction" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="progressMode" format="enum">
            <enum name="full" value="0" />
            <enum name="half" value="1" />
        </attr>
        <attr name="labelPlacement" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="progressBarHeight" format="dimension" />
        <attr name="thumb_progressBar_Color" format="reference|color" />
        <attr name="bg_progressBar_color" format="reference|color"/>
        <attr name="point_radius" format="dimension"></attr>
        <attr name="bottom_axis_to_top" format="dimension"/>
        <attr name="anim_duration" format="integer"></attr>
        <attr name="animated" format="boolean"></attr>
        <attr name="progress_dot" format="boolean"/>
    </declare-styleable>
</resources>